@page
@model IndexModel


<div class="text-center">
    <div class="text-center">
        <h1 class="display-4">لیست گروه محصولات</h1>
        <p><a asp-page="./Create" class="btn btn-success">ایجاد جدید</a></p>
    </div>

    <table class="table table-responsive table-bordered table-striped">
        <thead>
        <tr>
            <td>#</td>
            <td>نام</td>
            <td>تاریخ ایجاد</td>
            <td>عملیات</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ProductCategories)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CreationDate</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>